# DocGraph Development Environment Variables

# Application Environment
ENVIRONMENT=development
DEBUG=true

# External Port Configuration (Host → Container mapping)
WEB_PORT=3000
API_PORT=8000
POSTGRES_PORT=5433
NEO4J_HTTP_PORT=7475
NEO4J_BOLT_PORT=7688
REDIS_PORT=6380

# Internal Network Port Configuration (Container ↔ Container)
POSTGRES_INTERNAL_PORT=5432
NEO4J_INTERNAL_PORT=7687
REDIS_INTERNAL_PORT=6379
API_INTERNAL_PORT=8000

# Frontend Environment Variables
VITE_API_BASE_URL=http://localhost:${API_PORT:-8000}

# Backend Environment Variables (for development these use different ports)
DATABASE_URL=postgresql://docgraph_user:secure_dev_password@localhost:${POSTGRES_PORT}/docgraph_dev
NEO4J_URI=bolt://localhost:${NEO4J_BOLT_PORT}
NEO4J_USER=neo4j
NEO4J_PASSWORD=secure_dev_neo4j_password
REDIS_URL=redis://:secure_dev_redis_password@localhost:${REDIS_PORT}

# Security
JWT_SECRET=generate-secure-random-key-for-development

# Docker Compose Database Configuration
# PostgreSQL
POSTGRES_DB=docgraph_dev
POSTGRES_USER=docgraph_user
POSTGRES_PASSWORD=secure_dev_password

# Neo4j
NEO4J_AUTH=neo4j/secure_dev_neo4j_password

# Redis
REDIS_PASSWORD=secure_dev_redis_password

# Development Notes:
# - Copy this file to .env for local development
# - Change all passwords for production environments
# - The JWT_SECRET should be a strong random string in production