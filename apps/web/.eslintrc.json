{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": ["dist", "build", "node_modules", "*.spec.tsx", "*.test.tsx"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react-refresh"],
  "globals": {
    "React": "readonly",
    "JSX": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "test": "readonly",
    "expect": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "vi": "readonly"
  },
  "rules": {
    "react-refresh/only-export-components": "warn",
    "no-unused-vars": "warn",
    "no-useless-escape": "warn",
    "no-undef": "warn"
  }
}